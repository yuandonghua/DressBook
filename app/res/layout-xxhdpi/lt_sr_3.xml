<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/third_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="4" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4" >

        <TextView
            android:id="@+id/third_1_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:text="1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/third_4_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:text="4"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/third_7_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:text="7"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/third_dian_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:text="."
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="1dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/third_2_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="2"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/third_3_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="3"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/third_5_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="5"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/third_6_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="6"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/third_8_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="8"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/third_9_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="9"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/third_0_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selector_ltsj_jp"
                android:gravity="center"
                android:text="0"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/third_delete_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/qingchu" />

        <TextView
            android:id="@+id/third_qx_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:text="取消"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/third_bc_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/selector_ltsj_jp"
            android:gravity="center"
            android:text="保存"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>
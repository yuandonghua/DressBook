<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/find_result_srl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/find_result_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </android.support.v4.widget.SwipeRefreshLayout>
	
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/loadmore_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_top_bar_height" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_grey_line"
            android:layout_alignParentTop="true"
            android:background="@color/main_grey_line" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/pbViewLoadingMore"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/main_red"
                android:indeterminateTintMode="src_atop" />

            <TextView
                android:id="@+id/tvViewLoadingMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/main_horizontal_side_offset_normal"
                android:text="努力加载中..."
                android:textColor="@color/main_text_grey"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_grey_line"
            android:layout_alignParentBottom="true"
            android:background="@color/main_grey_line" />
    </RelativeLayout>

</LinearLayout>
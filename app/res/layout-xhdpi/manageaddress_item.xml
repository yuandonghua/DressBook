<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/white_bg_1" >

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="袁东华"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/name_tv"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="18801123830"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="北京市大兴区星光影视园"
        android:textColor="@color/black5"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/bottom_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_tv"
        android:padding="20dp" >

        <RadioButton
            android:id="@+id/rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/radiobutton_selector_1"
            android:text="设为默认地址"
            android:textColor="@color/black3"
            android:textSize="14sp"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/edit_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/delete_iv"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/delete_iv"
            android:src="@drawable/edit_src_1" />

        <ImageView
            android:id="@+id/delete_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/delete_src_1" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@anim/loading"
        android:visibility="gone" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="200" android:exitFadeDuration="200">

    <item android:state_pressed="true"><shape>
            <corners android:radius="4dp" />

            <stroke android:width="0.3dp" android:color="@color/main_text_light_grey" />

            <solid android:color="@color/main_background_grey" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <corners android:radius="4dp" />

            <stroke android:width="0.3dp" android:color="@color/main_text_light_grey" />

            <solid android:color="@color/main_background_grey" />
        </shape></item>
    <item><shape>
            <corners android:radius="4dp" />

            <stroke android:width="0.3dp" android:color="@color/main_text_light_grey" />

            <solid android:color="#FCFCFC" />
        </shape></item>

</selector>
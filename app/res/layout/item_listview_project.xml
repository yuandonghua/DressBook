<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvItemProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_project_title_height"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="20"
            android:textColor="@color/main_text_grey"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/ivItemProjectPicture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_project_photo_height"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_horizontal_side_offset_normal" >

            <TextView
                android:id="@+id/tvItemProjectStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:textColor="@color/main_text_grey"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvItemProjectTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/main_horizontal_side_offset_normal"
                android:singleLine="true"
                android:textColor="@color/main_text_grey"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvItemProjectJoinNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/main_horizontal_side_offset_normal"
                android:singleLine="true"
                android:textColor="@color/main_text_grey"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvItemProjectSupportNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/main_horizontal_side_offset_normal"
                android:layout_toLeftOf="@id/tvItemProjectJoinNum"
                android:singleLine="true"
                android:textColor="@color/main_text_grey"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvItemProjectSponsor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_horizontal_side_offset_normal"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textColor="@color/main_text_grey"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tvItemProjectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_horizontal_side_offset_normal"
            android:layout_marginRight="@dimen/main_horizontal_side_offset_normal"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textColor="@color/main_text_grey"
            android:textSize="@dimen/text_size_medium" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnItemProjectSupport"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:background="@drawable/selector_unavailable_button"
                    android:text="已支持"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />

                <Button
                    android:id="@+id/btnItemProjectDetail"
                    android:layout_width="80dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="48dp"
                    android:background="@drawable/selector_red_button"
                    android:text="详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_grey_line"
            android:background="@color/main_grey_line" />
    </LinearLayout>

</RelativeLayout>
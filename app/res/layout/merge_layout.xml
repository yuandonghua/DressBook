<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00FF0000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >
    </LinearLayout>

    <cn.dressbook.ui.face.view.BodyImageView
        android:id="@+id/imageUser"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

    <cn.dressbook.ui.face.view.BodyImageView
        android:id="@+id/imageBody4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <cn.dressbook.ui.face.view.FCHairView
        android:id="@+id/imageHead4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/toolbar"
        android:background="#00000000"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <cn.dressbook.ui.face.view.FCGestureView
                android:id="@+id/FCGestureView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#00000000" />

            <RelativeLayout
                android:id="@+id/RelativeLayout_weitiao2"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:background="#10000000"
                android:focusable="true" >

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="色相" />

                    <SeekBar
                        android:id="@+id/seekBar3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:max="255"
                        android:progress="127" />

                    <TextView
                        android:id="@+id/textViewseekBar3"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/linearLayout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="亮度" />

                    <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:max="255"
                        android:progress="127" />

                    <TextView
                        android:id="@+id/textViewseekBar1"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="70dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="饱和度" />

                    <SeekBar
                        android:id="@+id/seekBar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"
                        android:max="255"
                        android:progress="127" />

                    <TextView
                        android:id="@+id/textViewseekBar2"
                        android:layout_width="40dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="0" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
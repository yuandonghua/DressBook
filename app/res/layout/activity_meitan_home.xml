<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_grey"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvMeitanHomeFocusLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:text="我的关注"
            android:textColor="@color/main_text_grey"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvMeitanHomeSquareLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:text="社区广场"
            android:textColor="@color/main_text_grey"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvMeitanHomeFocusIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/main_red"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvMeitanHomeSquareIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/main_background_grey"
            android:gravity="center" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flMeitanHomeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_grey" >
    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvItemRecordTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_project_title_height"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="20"
            android:textColor="@color/main_text_grey"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/ivItemRecordPicture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_project_photo_height"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/llItemRecordButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="18dp"
                android:layout_marginRight="@dimen/main_horizontal_side_offset_normal"
                android:layout_marginTop="18dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnItemRecordReceive"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:background="@drawable/selector_red_button"
                    android:text="领取"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />

                <Button
                    android:id="@+id/btnItemRecordShare"
                    android:layout_width="72dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/main_horizontal_side_offset_normal"
                    android:background="@drawable/selector_red_button"
                    android:text="晒爱心"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/main_horizontal_side_offset_normal"
                android:layout_toLeftOf="@id/llItemRecordButtons"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="奖励"
                    android:textColor="@color/main_text_grey"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tvItemRecordCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/main_red"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvItemRecordTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/main_horizontal_side_offset_normal"
                android:text=""
                android:textColor="@color/main_text_grey"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_grey_line"
            android:background="@color/main_grey_line" />
    </LinearLayout>

</RelativeLayout>